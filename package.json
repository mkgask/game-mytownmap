{
	"name": "game-mytownmap",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"test": "bun test",
		"test:unit": "bun test tests/unit",
		"test:integration": "bun test tests/integration",
		"test:e2e": "bunx playwright test",
		"test:e2e:install": "playwright install",
		"test:all": "bun run test:unit && bun run test:integration && bun run test:e2e",
		"lint": "biome check .",
		"format": "biome format --write .",
		"typecheck": "astro check",
		"dev:cf": "wrangler pages dev dist --compatibility-date 2026-01-31",
		"deploy:cf": "wrangler pages deploy dist",
		"preview": "bun run build && astro preview",
		"check": "bun run format && bun run lint && bun run typecheck && bun run test",
		"deploy": "bun run check && bun run deploy:cf"
	},
	"test": {
		"globals": true,
		"environment": "happy-dom",
		"setupFiles": ["./tests/setup.ts"],
		"include": ["tests/unit/**/*.{test,spec}.{js,mjs,ts,tsx}", "tests/integration/**/*.{test,spec}.{js,mjs,ts,tsx}"],
		"exclude": ["node_modules", "dist", ".astro"],
		"coverage": {
			"reporter": ["text", "lcov", "html"],
			"include": ["src/**/*.{js,ts,tsx}"]
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.12",
		"@playwright/test": "^1.58.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@types/bun": "latest",
		"@types/react": "^19.2.10",
		"wrangler": "^4.60.0"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.6",
		"astro": "^5.16.15"
	}
}
